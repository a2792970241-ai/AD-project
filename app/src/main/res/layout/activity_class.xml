<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F3DA"
    tools:context=".ClassActivity">

    <TextView
        android:id="@+id/classTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jason's Class"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F4FFEB"
        app:layout_constraintTop_toBottomOf="@id/classTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/homeworkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homework"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="4dp"/>

            <ListView
                android:id="@+id/homeworkListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:divider="@null"
                android:dividerHeight="0dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Announcement Button -->
    <Button
        android:id="@+id/announcementButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_rounded_background"
        android:drawableStart="@drawable/flag"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Announcement"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainCard" />

    <!-- Quiz Button -->
    <Button
        android:id="@+id/quizButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_rounded_background"
        android:drawableStart="@drawable/edit_3"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Quiz"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/announcementButton" />

    <!-- Leave the Class Button -->
    <Button
        android:id="@+id/leaveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_rounded_background"
        android:drawableStart="@drawable/log_out"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Leave the Class"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quizButton" />

    <!-- 底部导航 -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/exerciseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exercise"
            android:textColor="#000000"
            android:textSize="14sp"
            android:padding="6dp"
            android:gravity="center"
            android:drawableTop="@drawable/exerciseicon"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/dashboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textColor="#000000"
            android:textSize="14sp"
            android:padding="6dp"
            android:gravity="center"
            android:drawableTop="@drawable/dashboardicon"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/classButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Class"
            android:textColor="#000000"
            android:textSize="14sp"
            android:padding="6dp"
            android:gravity="center"
            android:drawableTop="@drawable/classicon"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="#000000"
            android:textSize="14sp"
            android:padding="6dp"
            android:gravity="center"
            android:drawableTop="@drawable/homeicon"
            android:background="@drawable/button_background"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>