<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ADProject" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:windowBackground">@color/custom_background</item>

        <!-- 关闭系统 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- 建议：透明状态栏 + 由应用绘制系统栏背景（与 WindowInsets 配合更好） -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.ADProject" parent="Base.Theme.ADProject" />
</resources>
